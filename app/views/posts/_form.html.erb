<div class="bloc">
  <% if post.new_record? %>
    <form id="content-options-selector" class="content">
      <input type="radio" name="post-options" value="simple" id="simple"
      checked >
      <label for="simple">
        <%= t('simple_form.labels.content-options-selector.text-only') %>
      </label>
      <input type="radio" name="post-options" value="with-img" id="with-img" >
      <label for="with-img">
        <%= t('simple_form.labels.content-options-selector.with-img') %>
      </label>
      <input type="radio" name="post-options" value="with-video" id="with-video" >
      <label for="with-video">
        <%= t('simple_form.labels.content-options-selector.with-video') %>
      </label>
      <p class="help-block">
      <%= t('simple_form.hints.content-options-selector') %>
      </p>
    </form>
  <% end %>
  <%= simple_form_for post do |form| %>
    <div class="row">
      <div class="span8">
        <div class="content">
          <%= form.input :title %>
          <%= form.input :body, as: :text, input_html: {class: 'rte'} %>
          <%= submit_button_for form %>
        </div>
      </div>
      <div class="span4"><div class="content">
          <% if post.new_record? || post.image? %>
            <div class="img-input">
              <%= form.input :image, hint: t('simple_form.hints.image') %>
            </div>
            <% if post.image? %>
              <%= image_tag post.image_url, class: 'responsive' %>
              <p class="help-block">
              <%= t('simple_form.hints.change_image') %>
              </p>
              <%= form.input :remove_image, as: :boolean %>
            <% end %>
          <% end %>
          <% if post.new_record? || post.embed? %>
            <div class="embed-input">
              <%= form.input :embed, hint: t('simple_form.hints.embed') %>
            </div>
          <% end %>
      </div></div>
    </div>
    <% if current_user.admin? %>
      <div class="content">
        <br><br>
        <h3><%= t('.change_published_on') %></h3>
        <%= form.input :published_at %>
      </div>
    <% end %>
  <% end %>
</div>
