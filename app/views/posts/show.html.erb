<% title post.title %>
<%= user_column 'span2' do %>
  <%= image_tag 'blog/blog_100n.png', class: 'breadcrumb-image', alt: 'blog' %>
  <%= render_kudos post %>
  <%= render 'sections/summary', document: post %>
<% end %>
<div class='span6 center post'>
  <div class="header">
    <div class="hoverize">
      <%= hover? :update, post do %>
        <%= link_to icon(:pencil, 'Editar'), [:edit, post] %>
        <% if can? :delete, post %>
          |  <%= link_to icon(:trash), post, method: :delete,
            rel: "delete-post-#{post.id}", data: { confirm: 'Â¿Quieres borrar esta entrada?' } %>
        <% end %>
      <% end %>
      <h1><%= post.title %></h1>
      <h4>
        Por <%= link_to post.user.name, post.user %>,
        el <%= l post.published_at %>
      </h4>
    </div>
  </div>
  <%= render_post_media(post) %>
  <div class="summary markdown">
    <%= markdown post.body %>
  </div>
  <%= render_sections post %>
  <%= simple_list post.attachments do |attachment| %>
    <%= link_to attachment.file_identifier, attachment.file_url %>
  <% end %>
  <%= render 'users/author', user: post.user %>
</div>

<div class="sidebar span4">
  <%= render_posts_archive post.group.posts, post.group %>
</div>
