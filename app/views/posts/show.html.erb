<% title post.title %>

<% content_for :sidebar do %>
  <%= render 'archive' %>
<% end %>

<%= render 'groups/header' %>

<div class="member_bar controls">
  <%= link_box t('go_back'), posts_path %>
</div>
<div class="row">
  <div class="center span8">
    <%= div_for post, class: 'row' do %>
      <div class="info span2">
        <div class="corner none"></div>
        <div class="content">
          <h3><%= post.title %></h3>
        </div>
      </div>
      <div class="body span6">
        <div class="corner colored"></div>
        <div class="content">
          <% if can? :update, post %>
            <%= tabs do %> 
              <li class="active"><%= link_to t('view'), post %></li>
              <li><%= link_to t('edit'), edit_post_path(post) %></li>
            <% end %>
          <% end %>
          <%= render_post_media(post) %>
          <%= raw post.body %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render 'groups/sidebar' %>
</div>

