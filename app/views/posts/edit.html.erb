<%= group_header post.group %>
<div class="row">
  <div class='post-editor editor span12'><div class='corner colored'></div>
    <div class="content">
      <%= title post.title %>
      <%= tabs do %>
        <li><%= link_to t('view'), post %></li>
        <li class="active"><%= link_to t('edit'), edit_post_path(post) %></li>
      <% end %>
    </div>
    <%= render 'form' %>
  </div>
</div>
