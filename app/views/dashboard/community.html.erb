<%= page row: false do %>
  <div class="row">
    <div class="span6 offset2">
      <%= title 'Comunidad' %>
    </div>
    <div class="span4">
      <h2>Última actividad</h3>
    </div>
  </div>

  <div class="row">
    <div class="span8">
      <% groups.each do |group| %>
        <div class="row">
          <div class="span2">
            <%= render_group_bar group %>
          </div>
          <div class="span4">
            <div class="hoverize">
              <%= hover? :update, group do %>
                <%= link_to icon(:edit, 'Editar perfil'), edit_profile_url(subdomain: group.subdomain) %>
              <% end %>
              <h2><%= link_to group.title, group %></h2>
              <%= markdown group.summary %>
              <%= link_to 'Leer más...', profile_url(subdomain: group.subdomain) %>
            </div>
          </div>
          <div class="span2">
            <h4>Últimas entradas al blog</h4>
            <%= simple_list group.posts.latest do |post| %>
              <div style="width: 100%; height: 1.2em; overflow: hidden; text-overflow: ellipsis;">
                <%= link_to post.title, post_url(post, subdomain: group.subdomain) %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="span4">
      <%= simple_list Activities.site_activity(30) do |version| %>
        <%= render version %>
      <% end %>
    </div>
  </div>
<% end %>

