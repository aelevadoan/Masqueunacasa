<%= page do %>
    <div class="span10 offset2">
      <%= title 'Comunidad' %>
    </div>
  <% groups.each do |group| %>
    <div class="span12">
      <div class="row">
        <div class="span2">
          <%= avatar_link group, class: 'fixed' %>
          <p>&nbsp;</p>
        </div>
        <div class="span6">
          <h2><%= link_to group.title, group %></h2>
          <%= markdown group.summary %>
          <%= simple_list group.posts.latest do |post| %>
            <%= link_to post.title, post_url(post, subdomain: group.subdomain) %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

