- title t('.title')

.lista-visor.categories
  = render categories

- content_for :left do
  .fixed-block
    .left-block.filters
      .block-header
        => icon :filter
        = t('filter_by')
      .filter.block-row
        = link_to t('all'), url_for(request.params.merge(phase: nil))
      - phases.each do |phase|
        .filter.block-row
          = link_to phase.title, url_for(request.params.merge(phase: phase.id))

    .left-block.order
      .block-header
        => icon :sort
        = t('order_by')
      .order.block-row
        = link_to "Por fase", url_for(request.params.merge(sort_by: nil, d: nil))
      .order.block-row
        = link_to "MÃ¡s visitada", url_for(request.params.merge(sort_by: 'view_count', d: 'desc'))

- content_for :right do
  - habitapedia_notices.each do |notice|
    - if notice.embed?
      .right-block.help
        .embed-container
          = raw notice.embed

