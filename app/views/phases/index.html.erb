<% title 'Habitapedia' %>
<%= page row: false do %>
  <%# Estilos para .intro en welcome.css.scss %>
  <div class="row intro">
    <div class="span12">
      <div class="row">
        <div class="video-container span6 offset1">
          <div class="video">
            <iframe src="http://player.vimeo.com/video/37086987?title=0&amp;byline=0&amp;portrait=0" width="400" height="225" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
          </div>
        </div>     
        <div class="span4">
          <div class="corner"></div>
          <div class="content">
            <h2><%= t('intro.habitapedia.title') %></h2>
            <%= markdown t('intro.habitapedia.what') %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <% phases.each do |phase| %>
      <div class="phase-info span4">
        <div class="content">
          <div class="hoverize">
            <%= hover? :update, phase do %>
              <%= link_to icon(:edit, 'Editar fase'), [:edit, phase], 
                rel: "edit-phase-#{phase.id}" %>
            <% end %>

            <%= image_tag(phase.image_url, width: 100, height: 100, alt: phase.title, class: 'fixed centered phase-image') %>
            <h2><%= phase.title %></h2>
            <div class="summary markdown">
              <%= markdown phase.summary %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <% phases.each do |phase| %>
      <div class="span4">
        <div class="content">
          <%= render_category_list phase, title: phase.title %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

