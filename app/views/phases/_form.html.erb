<%= simple_form_for phase do |form| %>
  <div class="row">
    <div class="span4">
      <%= form.input :position %>
    </div>
  </div>
  <div class="row">
    <div class="span4">
      <%= form.input :title %>
      <%= form.input :question %>
      <%= form.input :summary, as: :text %>
    </div>
  </div>
  <%= form.submit %>
<% end %>
