<%= render_banner phase.name, phase %>


<div class="row">
  <%= user_column 'span2' do %>
    <%= fake_img(140, 140, class: 'fixed', text: phase.name) %>
    <div class="controls">
      <%= link_box 'Editar fase', [:edit, phase] if can? :update, phase %>
      <%= link_box 'AÃ±adir pregunta', [:new, phase, :category] if can? :create, Category %>
    </div>
  <% end %>

  <%= corner_span 'span6' do %>
    <%= title phase.name %>
    <%= fake_img 600, 400 %>
    <%= markdown phase.description %>
  <% end %>

  <%= corner_span 'span4' do %>
    <h2>Preguntas</h2>
      <%= simple_list phase.categories.each do |category| %>
        <h3><%= link_to category.question, [phase, category] %></h3>
      <% end %>
  <% end %>
</div>


