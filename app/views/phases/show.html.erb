<%= render_banner phase.name, phase %>


<div class="row">
  <%= user_column 'span2' do %>
    <%= link_to fake_img(140, 140, class: 'fixed', text: 'Habitapedia'), phases_path %>
  <% end %>

  <%= corner_span 'span6' do %>
    <div class="hoverize">
      <%= hover? :update, phase do %>
        <%= link_to 'Editar', [:edit, phase] %>
      <% end %>
      <%= title phase.name %>
      <%= fake_img 600, 400 %>
    </div>
    <%= markdown phase.description %>
  <% end %>

  <%= corner_span 'span4' do %>
    <div class="hoverize">
      <%= hover? :create, Category do %>
        <%= link_to 'AÃ±adir pregnta', [:new, phase, :category] %>
      <% end %>
      <h2>Preguntas</h2>
    </div>
    <%= simple_list phase.categories.each do |category| %>
      <div class="hoverize">
        <% if can? :update, category %>
          <div class="hover">
            <%= link_to 'Subir', [:up, category], method: :put%>
            |
            <%= link_to 'Bajar', [:down, category], method: :put %>
          </div>
        <% end %>
        <h3><%= link_to category.question, [phase, category] %></h3>
      </div>
    </div>
  <% end %>
<% end %>
</div>


