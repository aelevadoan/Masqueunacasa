<%= render_banner 'Relacionar', parent %>

<div class="row">
  <%= user_column 'span2' do %>
    <h3><%= parent.title %></h3>
    <div class="controls">
      <%= link_box t('go_back'), [:edit, parent] %>
    </div>
  <% end %>
  <%= corner_span 'span8' do %>
    <%= title 'AÃ±adir experiencia relacionada', :h2 %>
    <%= form_tag [:new, parent, :relation], method: :get do %>
      <%= text_field_tag :term, params[:term] %>
      <%= submit_tag 'Buscar experiencia' %>
    <% end %>
    <% if valid_term? %>
      <h4>Experiencias con '<%= params[:term] %>'</h4>
      <ul>
        <% results.each do |result| %>
          <li>
          <%= result.title %> 
          <%= link_to "Relacionar con #{parent.title}", proposal_relations_path(proposal, e: result.id), method: :post %>
          </li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>

