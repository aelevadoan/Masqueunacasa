= div_for experiencie, class: 'visor-elem' do
  .row
    .span3
      h2
        span.experiencie-icon.elem-icon
        = link_to experiencie.title, experiencie
      .pad
        .experiencie-summary.summary
          = markdown truncate( experiencie.summary, length: 200, separator: ' ' )

    .span3.image-container
      - unless experiencie.images.empty?
        = link_to image_tag( experiencie.image.try('to_s') ), experiencie
      - else
        p.no-image = t('.no_image')

