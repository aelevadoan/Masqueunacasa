<% title 'Experiencias' %>
<%= render_banner 'Experiencias', experiencies_path %>

<div class="experiencies cards">

  <% if can? :create, Experiencie %>
    <%= render_card do %>
      <div class="avatar">
        <img alt="Añadir experiencia" src="//cambelt.co/140x140/E%2B?font=Questrial&amp;font_size=48&amp;color=#cccccc,#333333">
      </div>
      <div class="info">
        <%= link_to 'Añadir experiencia', new_experiencie_path, rel: 'new-experiencie' %>
      </div>
    <% end %>
  <% end %>

  <%= render experiencies %>
</div>

