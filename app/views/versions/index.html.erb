<div class="row">
  <%= corner_span 'span12' do %>
    <%= title 'Actividad' %>
    <% versions.each do |version| %>
      <%= div_for version do %>
        <% if version.user_name.present? %>
          <%= link_to version.user_name, user_path(version.whodunnit) %>
        <% else %>
          An√≥nimx
        <% end %>

        <%= t("versions.events.#{version.event}") %>
        <strong>
          la
          <%= t("activerecord.models.#{version.item_type.downcase}") %>
        </strong>
        <%= link_to version.title, version %>
        en
        <%= link_to_if version.document.present?, version.parent_title, version.document %>
        <br>
        Hace <%= time_ago_in_words version.created_at %>
      <% end %>
    <% end %>
  <% end %>
</div>
