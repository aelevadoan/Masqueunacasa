<%= page do %>
  <div class="span6">
    <h2>En <%= link_to document.title, document %></h2>
    <%= title 'Administrar imágenes' %>
    <%= simple_list images do |image| %>
      <div class="hoverize">
        <%= hover? :update, document do %>
          <%= link_to icon(:trash), [document, image], method: :delete, confirm: "¿Seguro?" %>
          <%= link_to icon(:edit), [:edit, document, image] %>
        <% end %>
        <%= image.title %>
        <%= image_tag image.image.thumb.to_s %>
      </div>
    <% end %>
  </div>
  <div class="span4 offset1">
    <h3>Añadir imagen:</h3>
    <%= render 'form' %>
  </div>
<% end %>