<%= div_for user, class: 'card' do %>
  <div class="corner none"></div>
  <div class="card-content">
    <div class="avatar">
      <%= link_to user_url(user, host: request.domain) do %>
        <%= avatar_image(user) %>
        <%= user.name %>
      <% end %>
    </div> 
    <div class="info">
      <%= info %>
    </div>
  </div>
<% end %>

