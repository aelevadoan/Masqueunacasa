<%= render_banner user.name, users_path %>

<%= div_for user, class: 'row space' do %>
  <%= user_column 'span2' do %>
    <%= avatar_image(user) %>
    <%= content_tag(:p, 'Administrador(a) de masqueunacasa.org') if user.admin? %>
    <div class="controls">
      <%= link_box 'Cerrar sesión', logout_path if user == current_user %>
      <%= link_box 'Editar perfil', [:edit, user] if can? :update, user %>
    </div>
  <% end %>

  <%= corner_span('info span6') do %> 
    <%= title user.name %>
    <%= raw user.description %>
  <% end %>

<% end %>
