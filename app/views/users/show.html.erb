<% google_maps %>
<%= page do %>
  <%= user_column 'span2' do %>
    <div class="content-inner">
      <%= avatar_image(user) %>
      <%= render_kudos user %>
    </div>
  <% end %>

  <div class="center span6">
    <div class="content">
      <%= render_agent_info user %>
    </div>
    <div class="editorships">
      <h4>Ha participado en la elaboración de...</h4>
      <%= simple_list user.editorships.order('created_at DESC').limit(10) do |editorship| %>
        <%= link_to editorship.document.title, editorship.document %>
      <% end %>
      <% more = user.editorships.count - 10 %>
      <% if more > 0 %>
        y <%= more %> más...
      <% end %>
    </div>
  </div>
  <div class="sidebar sidebar-right span4">
    <%= render_locations_bar user %>
  </div>
<% end %>
