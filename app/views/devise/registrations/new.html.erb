<div class="row">
  <div class="bloc span4">
    <%= title 'Darse de alta' %>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.button :submit %>
    <% end %>

    <%= render "links" %>
  </div>
</div>
