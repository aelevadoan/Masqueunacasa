<div class="hoverize">
  <%= hover? :update, document do %>
    <%= link_to icon(:plus, 'Añadir enlace'), [:new, document, :link], rel: 'new-link' %>
  <% end %>
  <h2>Enlaces relacionados</h2>
</div>
<%= simple_list document.links do |link| %>
  <div class="hoverize">
    <%= hover? :update, document do %>
      <%= link_to icon(:edit), [:edit, document, link], rel: "edit-link-#{link.id}" %> |
      <%= link_to icon(:trash), [document, link], rel: "delete-link-#{link.id}", method: :delete, data: { confirm: 
                                                                                                          "¿Estas seguro de que quieres borrar este enlace?" } %>
  <% end %>
  <h3><%= link_to link.caption, link.url %></h3>
</div>
  <% end %>

