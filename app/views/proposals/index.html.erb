<% title t('.title') %>
<%= render_banner t('.title'), proposals_path %>

<div class="proposals cards">
  <% if can? :create, Proposal %>
    <%= render_card do %>
      <div class="avatar">
        <img alt="Añadir propuesta" src="//cambelt.co/140x140/P?font=Questrial&amp;font_size=48&amp;color=#cccccc,#333333">
        <%= link_to 'Añadir propuesta', new_proposal_path, rel: 'new-proposal' %>
      </div>
      <div class="info"></div>
    <% end %>
  <% end %>

  <%= render proposals %>
</div>
