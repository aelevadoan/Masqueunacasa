<div class="row">
  <%= corner_span 'span2' do %>
    <h3><%= link_to proposal.title, proposal %></h3>
  <% end %>
  <%= corner_span 'span6' do %>
    <%= title 'Editar propuesta' %>
    <%= render 'form' %>
  <% end %>
  <%= corner_span 'span4' do %>
    <h3>Experiencias relacionadas</h3>
    <ul>
      <% proposal.relations.each do |relation| %>
        <li>
        <%= link_to relation.experiencie.title, relation.experiencie %>
        <%= link_to '[borrar relación]', [proposal, relation], method: :delete, 
          confirm: "Borrar relación con #{relation.experiencie.title}. ¿Segurx?" if can? :delete, relation %>
        </li>
      <% end %>
    </ul>
    <%= link_to 'Añadir experiencia relacionada', new_proposal_relation_path(proposal) if can? :create, Relation %>
  <% end %>
  </div>
