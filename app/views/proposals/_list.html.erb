<% cache ['proposals', category] do %>
  <div class="related-proposals">
  <div class="hoverize">
    <%= hover? :create, Proposal do %>
      <%= link_to icon(:plus, 'AÃ±adir propuesta'), [:new, category, :proposal], rel: 'new-proposal' %>
  <% end %>
  <div class="header line-box">
    <%= image_tag("habitap/propuesta_35#{category.phase.color}.png", 
                  alt: 'Propuestas', width: 35, height: 35) %>
    <h2>Propuestas</h2>
  </div>
</div>
  <%= simple_list category.proposals.each do |proposal| %>
    <div class="hoverize">
    <%= hover? :update, proposal do %>
      <%= link_to icon('arrow-up'), [:up, proposal], method: :put %>
    |
    <%= link_to icon('arrow-down'), [:down, proposal], method: :put %>
  <% end %>

    <h3>
      <%= link_to proposal.title, proposal %>
      <small><br><%= icon(:undo, proposal.experiencies_count) %> experiencias</small>
    </h3>
    <%= markdown proposal.summary %>
  </div>
<% end %>
</div>
<% end %>
