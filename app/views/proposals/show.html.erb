<%= page do %>
  <div class="span2">
    <%= image_tag('habitap/proposal.png', alt: proposal.title, width: 150, height: 150) %>
    <%= render_kudos proposal %>
    <%# render_sections_summary proposal %>
    <%= render_social_links proposal %>
  </div>

  <div class="span6">
    <h3><%= link_to proposal.category.question, [proposal.category.phase, proposal.category] %></h3>
    <div class="hoverize">
      <%= hover? :update, proposal do %>
        <%= link_to icon(:edit, 'Editar'), [:edit, proposal], rel: 'edit-proposal' %>
        <% if can? :delete, proposal %>
          | <%= link_to icon(:trash), proposal, method: :delete,
            confirm: "¿Seguro que quieres borrar esta propuesta?" %>
        <% end %>
      <% end %>
      <%= title proposal.title %>
    </div>
    <div class="summary markdown">
      <%= markdown proposal.summary %>
    </div>
    <%= render_sections proposal %>
  </div>

  <div class="span4">
    <div class="hoverize">
      <%= hover? :create, Experiencie do %>
        <%= link_to icon(:plus, 'Añadir experiencia'), new_experiencie_path(p: proposal.id) %>
      <% end %>
      <h2>Experiencias relacionadas</h2>
    </div>
    <%= simple_list proposal.relations do |relation| %>
      <h3><%= link_to relation.experiencie.title, relation.experiencie %></h3>
      <%= markdown relation.experiencie.summary %>
    <% end %>

    <%= render_links_bar proposal %>
  </div>
<% end %>
