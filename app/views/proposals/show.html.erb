<%= render_banner t('.title'), proposals_path %>
<div class="row">
  <%= user_column 'span2' do %>
    <%= link_to placeholder_image_tag(text: proposal.phase.name, width: 140, height: 140), proposal.phase %>
    <div class="controls">
      <%= link_box 'Editar propuesta', [:edit, proposal], rel: "edit-proposal-#{proposal.id}" if can? :edit, proposal %>
    </div>
  <% end %>

  <%= corner_span 'span6' do %>
    <h3><%= link_to proposal.category.question, [proposal.category.phase, proposal.category] if proposal.category_id? %></h3>
    <%= title proposal.title %>
    <%= render_text proposal.description, proposal.body_type %>
    <%= render_text proposal.body, proposal.body_type %>
  <% end %>
  <%= corner_span 'span4' do %>
    <h3>Experiencias relacionadas</h3>
    <ul>
      <% proposal.relations.each do |relation| %>
        <li>
        <%= link_to relation.experiencie.title, relation.experiencie %>
        <%= link_to '[borrar relación]', [proposal, relation], method: :delete, 
          confirm: "Borrar relación con #{relation.experiencie.title}. ¿Segurx?" if can? :delete, relation %>
        </li>
      <% end %>
    </ul>
    <%= link_to 'Añadir experiencia relacionada', new_proposal_relation_path(proposal) if can? :create, Relation %>
  <% end %>
</div>
