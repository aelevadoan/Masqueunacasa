<%= page do %>
  <div class="span2">
    <%= image_tag('habitap/proposal.png', alt: proposal.title, width: 150, height: 150) %>
    <%= render_kudos proposal %>
    <%# render_sections_summary proposal %>
    <%= render_social_links proposal %>
  </div>

  <div class="span6">
    <div class="hoverize">
      <%= hover? :update, proposal do %>
        <%= link_to icon(:edit, 'Editar'), [:edit, proposal], rel: 'edit-proposal' %>
        <% if can? :delete, proposal %>
          | <%= link_to icon(:trash), proposal, method: :delete,
            data: { confirm: "Â¿Seguro que quieres borrar esta propuesta?" } %>
        <% end %>
      <% end %>
      <%= title proposal.title %>
    </div>
    <div class="summary markdown">
      <%= markdown proposal.summary %>
    </div>
    <%= render_sections proposal %>
  </div>

  <div class="span4">
    <%= render_proposal_relations proposal %>

    <%= render_links_bar proposal %>
  </div>
<% end %>
