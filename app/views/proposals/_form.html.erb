<%= simple_form_for proposal do |form| %>
  <%= form.input :title %>
  <%= form.association :phase, include_blank: false %>
  <%= form.association :category, collection: Category.all.map{|c| [c.question, c.id]} if current_user.admin? %>
  <%= form.input :description, as: :text, input_html: {class: 'NOrte'} %>
  <%= form.input :body_type, collection: ['html', 'markdown'], include_blank: false if current_user.admin? %>
  <%= form.input :body, as: :text, input_html: {class: 'NOrte'} %>
  <%= submit_button_for form %>
<% end %>
