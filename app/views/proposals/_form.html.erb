<%= simple_form_for proposal do |form| %>
  <%= form.input :title %>
  <%= form.input :summary, as: :text %>
  <%= form.input :phase_id, as: :hidden %>
  <%= form.input :category_id, as: :hidden %>
  <%= submit_button_for form %>
  <%= form.input :body, as: :text if current_user_admin? %>
<% end %>
