<%= render 'groups/header' %>

<div class="row">
  <%= user_column 'span2' do %>
    <%= avatar_link current_group %>
    <div class="controls">
      <%= link_box 'Nuevo documento', new_page_path, rel: 'new-page', 
        class: 'highlight' if can? :edit, current_group %>
      <% if current_membership %>
        <%= t('membership.status', state: t("membership.states.#{current_membership.state}"), group: current_group.name) %>'
        <%= link_box 'Editar perfil', edit_profile_path, 
        rel: 'edit-profile' if can? :edit, current_group %>
    <% end %>
  </div>
<% end %>
<%= corner_span 'span6' do %>
  <%= title "Documentos" %>
  <table class="table">
    <% pages.each do |page| %>
      <tr>
        <td><%= fake_img_fixed(30, 30) %></td>
        <td><h3><%= link_to page.title, page %></h3></td>
        <td><%= link_to 'Editar', [:edit, page] %></td>
      </tr>
    <% end %>
  </table>
<% end %>
</div>
