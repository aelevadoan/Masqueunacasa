<% title page.title %>

<%= render 'groups/header' %>

<div class="member_bar row">
  <div class="controls bloc span12">
    <div class="row">
      <div class="span2">
        <%= link_box t('go_back'), pages_path %>
      </div>
      <div class="span6">
        <%= link_box t('edit'), edit_page_path(page), class: 'highlight' if current_user &&
            current_user.member?(current_group) %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="center span8">
    <%= div_for page, class: 'row' do %>
      <div class="info span2">
        <div class="corner none"></div>
        <div class="content">
          <h3><%= page.title %></h3>
        </div>
      </div>
      <div class="body span6">
        <div class="corner colored"></div>
        <div class="content">
          <%= render_post_media(page) %>
          <%= raw page.body %>
        </div>
      </div>
    <% end %>
    <div id="versions" class="row">
      <% page.versions.each do |version| %>
        <div class="span6 offset2">
          <%= version.created_at %>
        </div>
      <% end %>
    </div>
  </div>
</div>