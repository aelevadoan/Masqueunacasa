<%= page row: false, head: false do %>
  <%= render_group_header group %>
  <div class="row">
    <%= user_column 'span2' do %>
      <%= avatar_link current_group %>
      <%= render_kudos doc %>
      <%= render_group_sections %>
    <% end %>

    <div class="span6">
      <div class="hoverize">
        <%= hover? :update, doc do %>
          <%= link_to icon(:pencil), [:edit, doc] %>
        <% end %>
        <%= title doc.title %>
      </div>
      <%= render_sections doc %>
    </div>
  </div>
<% end %>
