<%# render_banner 'Pregunta', phase_path(phase) %>

<div class="row">
  <%= user_column 'span2' do %>
    <%= link_to fake_img(140, 140, class: 'fixed', text: phase.title), phase %>
    <%= simple_list category.sections.titled do |section| %>
      <%= link_to truncate(section.title), "##{section.title}" %>
    <% end %>
  <% end %>
  <%= corner_span 'span6' do %>
    <h3><%= link_to phase.title, phase %></h3>
    <div class="hoverize">
      <% if can? :update, category %>
        <div class="hover">
          <%= link_to 'Editar', [:edit, phase, category] %>
        </div>
      <% end %>
      <%= title category.question %>
      <%= fake_img 600, 400 %>
    </div>
    <%= render_sections category %>
    <%= render_body category %>
  <% end %>

  <%= corner_span 'span4', :none do %>
    <div class="hoverize">
      <%= hover? :create, Proposal do %>
        <%= link_to 'AÃ±adir propuesta', [:new, :proposal] %>
      <% end %>
      <h2>Propuestas</h2>
    </div>
    <%= simple_list category.proposals.each do |proposal| %>
      <h3><%= link_to proposal.title, proposal %></h3>
      <%= render_body proposal.sections.first %>
    <% end %>
  <% end %>
</div>


