<div class="categories">
  <% if options[:title].present? %>
    <div class="hoverize">
      <%= hover? :create, Category do %>
        <%= link_to icon(:plus, 'AÃ±adir pregunta'), [:new, phase, :category] %>
      <% end %>
      <h2><%= options[:title] %></h2>
    </div>
  <% end %>

  <%= simple_list phase.categories.each do |category| %>
    <div class="hoverize">
      <% if can? :update, category %>
        <div class="hover">
          <%= link_to icon('arrow-up'), [:up, category], method: :put %>
          |
          <%= link_to icon('arrow-down'), [:down, category], method: :put %>
        </div>
      <% end %>
      <h3>
        <%= link_to category.question, [phase, category] %>
        <small><%= icon('certificate', category.proposals.count) %> propuestas.</small>
      </h3>
    </div>
  <% end %>
</div>

