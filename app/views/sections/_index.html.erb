<% document.sections.each do |section| %>
  <%= div_for section do %>
    <% if can? :update, section %>
      <div class="section-edit">
        <%= link_to 'Editar', [:edit, document, section], rel: "edit-section-#{section.id}" %> 
        |
        <%= link_to 'Subir', [:up, section], method: :put %>
        |
        <%= link_to 'Bajar', [:down, section], method: :put %>
      </div>
    <% end %>
    <a name="<%= section.title? ? section.title : section.id %>">
    </a>
    <h2><%= section.title %>
    <small><%= link_to raw('&uarr;'), '#' %></small>
  </h2>
  <%= render_body section %>
<% end %>
<% end %>
<%= link_to 'Añadir sección', [:new, document, :section], rel: 'new-section' if can? :create, Section %>

