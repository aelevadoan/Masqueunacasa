<%= group_header 'Añadir participante' %>

<div class="users cards">
  <% users.each do |user| %>
    <%= user_card(user) do %>
      <%= link_to user.name, user_url(user, host: request.domain) %>
      <div class="controls">
        <%= link_box 'Añadir', memberships_path(u: user), method: :post %>
      </div>
    <% end %>
  <% end %>
</div>


