<table class="table social-document">
  <tr>
    <td class="kudos">
      <%= link_to icon(:heart, ''), [model, :kudos], method: :put %>
      <%= model.kudos_count %> favoritos.
    </td>
  </tr>
  <% if model.respond_to?(:editeds) %>
    <tr>
      <td class="editors">
        <%= link_to icon('edit'), [model, :edition] %>
        <%= model.editeds_count %> editores.
      </td>
    </tr>
  <% end %>
  <% if model.respond_to?(:subscriptors) %>
    <tr>
      <td class="">
        <%= link_to icon('eye-open'), '#' %>
        <%= model.subscribers_count %> seguidores.
      </td>
    </tr>
  <% end %>
  <tr>
    <td class="subscriptors expansible">
      <%= link_to icon('globe'), '#' %>
      <%= model.view_count %> visitas.
    </td>
  </tr>
</table>
