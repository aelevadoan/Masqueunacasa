<% google_maps %>
<fieldset class="locations" id="location">
  <legend><%= Location.model_name.human(count: 1) %></legend>
  <p class="help-block">
    Clica en el mapa para establecer una localizaci√≥n.
  </p>
  <div class="map" style="width:300px; height: 300px;"></div>
  <% form.object.build_location if form.object.location.blank? %>
  <%= form.fields_for :location do |f| %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
  <% end %>
</fieldset>
