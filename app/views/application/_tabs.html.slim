ul#menu-tabs class="active-#{@active_tab} clearfix"
  li#home-tab class="#{ active? 'home' }"
    = link_to t('.home'), front_path, title: t('.home')
  li#habitapedia-tab class="#{ active? 'habitapedia' }"
    = link_to t('.habitapedia').html_safe, phases_path
  li#experiencies-tab class="#{ active? 'experiencies' }"
    = link_to t('.experiencies'), experiencies_path
  li#community-tab class="#{ active? 'community' }"
    = link_to t('.community'), community_path
  li#map-tab class="#{ active? 'map' }"
    = link_to t('routes.locations').capitalize, locations_path
