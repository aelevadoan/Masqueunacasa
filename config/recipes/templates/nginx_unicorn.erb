upstream masqueunacasa {
  server unix:/tmp/unicorn.<%= application.downcase %>.sock fail_timeout=0;
}

server {
  listen 80;
  server_name masqueunacasa.net *.masqueunacasa.net masqueunacasa.org *.masqueunacasa.org;
  root <%= current_path %>/public;

  if ($host = 'masqueunacasa.net' ) {
    rewrite  ^/(.*)$  http://masqueunacasa.org/$1  permanent;
  }

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  try_files $uri/index.html $uri @unicorn;
  location @masqueunacasa {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://unicorn;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 1G;
  keepalive_timeout 10;
}
